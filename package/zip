# /usr/bin/env bash
set -euo pipefail
IFS=$'\n\t'
set -vx

case "$OSTYPE" in
  darwin*)
      ext="dylib"
      ;;
  *)
      ext="so"
      ;;
esac

version_num=$(git describe --tags --abbrev=0 | sed -E 's/v([0-9]+\.[0-9]+)/\1/')

pkg="tree-sitter-parsers"
pkg_name="$pkg-$version_num-$PLATFORM"
rm -rf "$pkg"

dst=$pkg
mkdir "$dst"

cp lib/"$PLATFORM"/*."$ext" "$dst"

zip lib/"$pkg_name.zip" "$dst"/*
tar -cvzf lib/"$pkg_name.tar.gz" "$dst"/*
